{
  "name": "@kaave/react-app-common",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "webpack serve --port 7500",
    "gen": "run-p gen:*",
    "gen:css-types": "tcm src",
    "start": "webpack serve",
    "start:standalone": "webpack serve --env standalone",
    "build": "pnpm gen; run-p build:* typecheck",
    "build:webpack": "webpack --mode=production",
    "analyze": "webpack --mode=production --env analyze",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:complexity": "eslint src -c .eslintrc.complexity.cjs --ext .ts,.tsx,.js,.jsx",
    "lint:style": "stylelint './src/**/*.css'",
    "lint:spell": "cspell './src/**/*'",
    "fix": "run-p fix:*",
    "fix:scripts": "pnpm prettier; eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "fix:style": "stylelint --fix '**/*.css' && prettier --write '**/*.css'",
    "fix:packagejson": "sort-package-json",
    "prettier": "prettier --write \"src/**/*.+(ts|tsx|json|yml|css|md|mdx)\"",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "browserslist": [
    "chrome >= 92"
  ],
  "dependencies": {
    "jotai": "2.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "single-spa-react": "^5.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.3.56",
    "@swc/jest": "^0.2.26",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^14.0.0",
    "@tsconfig/strictest": "^2.0.1",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/systemjs": "^6.1.1",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "cross-env": "^7.0.3",
    "cspell": "^6.31.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-jsdoc": "^43.1.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "^1.14.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-testing-library": "^5.10.3",
    "eslint-plugin-unicorn": "^46.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "single-spa": "^5.9.3",
    "sort-package-json": "^2.4.1",
    "stylelint": "^15.6.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-css-modules": "^4.2.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-recommended": "^12.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "swc-loader": "^0.2.3",
    "typed-css-modules": "^0.7.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "webpack-config-single-spa-react-ts": "^4.0.0",
    "webpack-dev-server": "^4.13.3",
    "webpack-merge": "^5.8.0"
  },
  "peerDependencies": {
    "single-spa": "^5.9.3"
  },
  "packageManager": "pnpm@8.4.0",
  "engines": {
    "node": "18.14.2",
    "npm": "please_use_pnpm_instead",
    "pnpm": "8.4.0",
    "yarn": "please_use_pnpm_instead"
  }
}
