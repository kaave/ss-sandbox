{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    /*
     * `ts-config-single-spa`
     * copy from https://github.com/single-spa/create-single-spa/blob/85a638b69d094641f916bff69349234a9071eb66/packages/ts-config-single-spa/tsconfig.json
     */
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      // "scripthost",
      // "es2015",
      // "es2015.promise",
      // "es2016.array.include",
      // "es2018"
      "ESNext"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,

    /*
     * Manual
     */
    "target": "ESNext",
    "jsx": "react-jsx",
    "declarationDir": "dist"
  },
  "files": ["src/kaave-react-app-common.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
