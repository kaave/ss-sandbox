{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "extends": ["@tsconfig/strictest/tsconfig.json", "ts-config-single-spa"],
    "compilerOptions": {
        /*
         * Update from `ts-config-single-spa`
         */
        // `"bundler"` にしたいが、 single-spa-react に不備が存在する結果エラーとなるためやむなく `"node"` とする。
        "moduleResolution": "node",
        // 最新の ECMAScript に対応するため、 ESNext に変更
        "lib": ["dom", "ESNext"],
        // 型定義は不要なので省略する
        "emitDeclarationOnly": false,

        /*
         * Manual
         */
        "target": "ESNext",
        "verbatimModuleSyntax": true,
        "jsx": "react-jsx",
        "declarationDir": "dist",
        "types": ["vitest/globals", "@types/testing-library__jest-dom"]
    },
    "include": ["src/**/*", "gen/**/*", "test/**/*"]
}
